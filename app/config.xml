<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" android-packageName="com.maltertech.my_bobcat2" ios-CFBundleIdentifier="com.maltertech.my-bobcat" version="2.98">
	<name>My Bobcat</name>
	<description>N/A</description>
	<author href="http://maltertech.com" email="zach@maltertech.com">Zach Malter</author>

	<!-- Platforms -->
	<platform name="ios" />
	<platform name="android" />

	<!-- General Preferences -->
	<preference name="Orientation" value="portrait" />
	<preference name="DisallowOverscroll" value="true" />

	<!-- Whitelist Plugin Preferences -->
	<allow-navigation href="*" />
	<allow-intent href="*" />
	<access origin="*" />
	
	<!-- Statusbar Plugin Preferences -->
	<preference name="StatusBarStyle" value="lightcontent" />
	<preference name="StatusBarBackgroundColor" value="#A00000" />

	<!-- Splashscreen Plugin Preferences -->
	<preference name="ShowSplashScreenSpinner" value="false" />
	<preference name="SplashMaintainAspectRatio" value="true" />
	<preference name="SplashScreenDelay" value="2000" />

	<!-- iOS Splash Screen & Icon -->
	<platform name="ios">
		<icon src="res/icon/ios/icon-1024.png" width="1024" height="1024"/>
		<icon src="res/icon/ios/icon-small.png" width="29" height="29"/>
		<icon src="res/icon/ios/icon-small@2x.png" width="58" height="58"/>
		<icon src="res/icon/ios/icon-small@3x.png" width="87" height="87"/>
		<icon src="res/icon/ios/icon-small-40.png" width="40" height="40"/>
		<icon src="res/icon/ios/icon-small-40@2x.png" width="80" height="80"/>
		<icon src="res/icon/ios/icon-small-40@3x.png" width="120" height="120"/>
		<icon src="res/icon/ios/icon-small-50.png" width="50" height="50"/>
		<icon src="res/icon/ios/icon-small-50@2x.png" width="100" height="100"/>
		<icon src="res/icon/ios/icon.png" width="57" height="57"/>
		<icon src="res/icon/ios/icon@2x.png" width="114" height="114"/>
		<icon src="res/icon/ios/icon-60.png" width="60" height="60"/>
		<icon src="res/icon/ios/icon-60@2x.png" width="120" height="120"/>
		<icon src="res/icon/ios/icon-60@3x.png" width="180" height="180"/>
		<icon src="res/icon/ios/icon-72.png" width="72" height="72"/>
		<icon src="res/icon/ios/icon-72@2x.png" width="144" height="144"/>
		<icon src="res/icon/ios/icon-76.png" width="76" height="76"/>
		<icon src="res/icon/ios/icon-76@2x.png" width="152" height="152"/>
		<icon src="res/icon/ios/icon-167.png" width="167" height="167"/>
		<icon src="res/icon/ios/icon-83.5@2x.png" width="167" height="167"/>
		<splash src="res/screen/ios/Default@2x~universal~anyany.png" />
	</platform>

	<!-- Android Splash Screen & Icon -->
	<platform name="android">
		<icon background="res/icon/android/mipmap-mdpi/ic_launcher_background.png" density="mdpi" foreground="res/icon/android/mipmap-mdpi/ic_launcher_foreground.png" />
		<icon background="res/icon/android/mipmap-hdpi/ic_launcher_background.png" density="hdpi" foreground="res/icon/android/mipmap-hdpi/ic_launcher_foreground.png" />
		<icon background="res/icon/android/mipmap-xhdpi/ic_launcher_background.png" density="xhdpi" foreground="res/icon/android/mipmap-xhdpi/ic_launcher_foreground.png" />
		<icon background="res/icon/android/mipmap-xxhdpi/ic_launcher_background.png" density="xxhdpi" foreground="res/icon/android/mipmap-xxhdpi/ic_launcher_foreground.png" />
		<icon background="res/icon/android/mipmap-xxxhdpi/ic_launcher_background.png" density="xxxhdpi" foreground="res/icon/android/mipmap-xxxhdpi/ic_launcher_foreground.png" />
		<splash density="port-ldpi" src="res/screen/android/splash-port-ldpi.png"/>
		<splash density="port-mdpi" src="res/screen/android/splash-port-mdpi.png"/>
		<splash density="port-hdpi" src="res/screen/android/splash-port-hdpi.png"/>
		<splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png"/>
		<splash density="port-xxhdpi" src="res/screen/android/splash-port-xxhdpi.png"/>
		<splash density="port-xxxhdpi" src="res/screen/android/splash-port-xxxhdpi.png"/>
	</platform>
</widget>
